<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PropiedadActivity">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_propiedad" android:textSize="18sp"
            android:textStyle="bold" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="$0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/precio_propiedad"
            app:layout_constraintTop_toBottomOf="@+id/nombre_propiedad" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimary"/>
    <TextView
            android:text="Detalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detalles_propiedad" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/precio_propiedad" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>

    <ImageView
            android:layout_width="350dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/imagen"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/detalles_propiedad" />
</android.support.constraint.ConstraintLayout>